<!-- app/views/boards/show.html.erb -->
<h1 class="text-center my-4"><%= @board.title %></h1>

<div class="row flex-nowrap overflow-auto">
  <% @board.lists.each do |list| %>
    <div class="col-12 col-md-3 mb-4">
      <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header bg-primary text-white rounded-top">
          <%= truncate(list.title, length: 20) %>
          <%= link_to "Editar", edit_board_list_path(@board, list), class: "btn btn-sm btn-outline-light float-end" %>
          <%= button_to "Excluir", board_list_path(@board, list), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger float-end me-2" %>
        </div>
        <div class="card-body">
          <% if list.cards.any? %>
            <% list.cards.each do |card| %>
              <div class="card mb-2 shadow-sm">
                <div class="card-body p-2">
                  <h6 class="card-title text-dark"><%= truncate(card.title, length: 20) %></h6>
                  <p class="card-text text-muted"><%= truncate(card.description, length: 50) %></p>
                  <%= link_to "Editar", edit_board_list_card_path(@board, list, card), class: "btn btn-sm btn-outline-primary" %>
                  <%= button_to "Excluir", board_list_card_path(@board, list, card), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Nenhum card nesta lista.</p>
          <% end %>
          <%= link_to "Novo Card", new_board_list_card_path(@board, list), class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Novo botÃ£o de adicionar lista -->
  <div class="col-12 col-md-3">
    <div class="card shadow-sm border-0 rounded-lg d-flex align-items-center justify-content-center" style="min-height: 150px;">
      <%= link_to "Nova Lista", new_board_list_path(@board), class: "btn btn-lg btn-primary" %>
    </div>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to "Editar Board", edit_board_path(@board), class: "btn btn-secondary me-2" %>
  <%= link_to "Voltar para Boards", boards_path, class: "btn btn-light" %>
</div>
